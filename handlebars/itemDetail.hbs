<div>
  <div class="nav prev">
    <img src="/images/nav-prev.png" alt="prev">
  </div>
  <figure>
    <img src="/images/{{image}}" alt="selected-item">
  </figure>
  <article>
    <a class="close" href="/">+</a>
    <h1>{{name}}</h1>
    <p>{{description}}</p>
    <footer>
      <h2>$12.00</h2>
      <a class="add_cart" href="#">Add to cart</a>
    </footer>
  </article>
  <aside>
    <h3>Nutritional Information</h3>
    <table>
      <tbody>
        <tr>
          <td>Protein</td>
          <td>{{format_nutrition protein}}</td>
        </tr>
        <tr>
          <td>Fat (total)</td>
          <td>{{format_nutrition fat}}</td>
        </tr>
        <tr>
          <td>Carbohydrates</td>
          <td>{{format_nutrition carbohydrates}}</td>
        </tr>
        <tr>
          <td>Energy (kj)</td>
          <td>{{format_nutrition energyKJ}}</td>
        </tr>
        <tr>
          <td>Energy (kcal)</td>
          <td>{{format_nutrition energyKCal}}</td>
        </tr>
        <tr>
          <td>Sugar</td>
          <td>{{format_nutrition sugar}}</td>
        </tr>
      </tbody>
    </table>
  </aside>
  <div class="nav next">
    <img src="/images/nav-next.png" alt="next">
  </div>
</div>
